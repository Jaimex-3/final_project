{
  "name": "exam-security-system",
  "version": "1.0.0",
  "main": "src/server.js",
  "description": "Exam Security System with Identity Verification, Seating Plan Management, and Violation Logging",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YavuzYaman217/final_project.git"
  },
  "keywords": [
    "exam",
    "security",
    "identity-verification",
    "ml"
  ],
  "author": "Project Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/YavuzYaman217/final_project/issues"
  },
  "homepage": "https://github.com/YavuzYaman217/final_project#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "mysql2": "^3.16.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
